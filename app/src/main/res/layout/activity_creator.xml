<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#a8d3da"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatorActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:background="@drawable/bottom_corner"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/rel1"
                >

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_back"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ABOUT AND MSG FROM DEV."
                    android:fontFamily="@font/baloo"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo"
                android:textColor="#fff"
                android:id="@+id/t1"
                android:gravity="center"
                android:text="This app is made just for learning purpose.\n To gain the knowledge of using Retrofit to request Api's, learn the implementation of MVVM architecture and enable google addMob to the app.There Would be many Bugs(Mistakes) in the apps.Plz forgive me for that,as I am still in the learning phase."
                />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/t1"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo"
                android:textColor="#fff"
                android:text="Msg from Dev:\n	\t\t\t\t\t\t\t\t\t\tAs we can see how the pandemic has caused a lot of damage to the country, if it continues for a longer time then it would be a very big problem to our country.This app is to make u aware about the number of corona patients in ur state...So that u don't come out of ur house...So please Stay Home Stay Safe and Save Lives.A request to all the users who have this app, download ArogyaSetu App, If u do so indirectly u r helping the country...So plz Stay Home,Be productive and Download ArogyaSetu."
                />

            <TextView
                android:id="@+id/t3"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:text="DeathSTORM18"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:fontFamily="@font/baloo"
                />
            <TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:layout_centerHorizontal="true"
                android:text="(This is my PUBG Name which I use as my Developer Name ðŸ¤Ÿ)"
                />
            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo"
                android:layout_below="@id/t4"
                android:text="Follow me on Instagram(Click on the Icon to follow)"
                />
            <ImageView
                android:id="@+id/insta"
                android:layout_below="@id/t5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/insta"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/insta"
                android:layout_centerHorizontal="true"
                android:id="@+id/t6"
                android:text="If you like the icons of this app then plz visit www.flaticon.com\nFor source code DM me on Instagram"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>